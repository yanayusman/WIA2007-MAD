<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".CommunityAllFragment">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="144dp"
        android:layout_height="48dp"
        android:layout_marginStart="133dp"
        android:layout_marginEnd="134dp"
        android:src="@drawable/join_community"
        app:layout_constraintBottom_toTopOf="@+id/joinPromptTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="48dp"
        android:layout_height="36dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/horizontalLineView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="80dp"
        android:background="#000000"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="146dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="147dp"
        android:fontFamily="@font/poppins"
        android:text="Community"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shareplate_logo_image" />

    <TextView
        android:id="@+id/joinPromptTextView"
        android:layout_width="359dp"
        android:layout_height="46dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="26dp"
        android:fontFamily="@font/inter"
        android:text="Would you be interested in joining SharePlate volunteers to rescue surplus food?"
        android:textAlignment="center"
        android:textColor="#228B22"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/horizontalLineView" />

    <Button
        android:id="@+id/interestedButton"
        android:layout_width="125dp"
        android:layout_height="52dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#228B22"
        android:fontFamily="@font/poppins"
        android:padding="8dp"
        android:text="I'm interested >"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/joinPromptTextView"
        app:layout_constraintTop_toTopOf="@id/joinPromptTextView" />

    <Button
        android:id="@+id/notNowButton"
        android:layout_width="127dp"
        android:layout_height="48dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/not_now_button_background"
        android:fontFamily="@font/poppins"
        android:padding="8dp"
        android:text="Not right now"
        android:textColor="#228B22"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/joinPromptTextView"
        app:layout_constraintTop_toTopOf="@id/joinPromptTextView" />

    <FrameLayout
        android:layout_width="414dp"
        android:layout_height="440dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/allEventsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/inter"
        android:text="All Events"
        android:textColor="#228B22"
        android:textStyle="bold"
        android:shadowColor="#80000000"
        android:shadowDy="5"
        android:shadowRadius="7"
        app:layout_constraintEnd_toStartOf="@+id/volunteeringButton"
        app:layout_constraintTop_toBottomOf="@id/joinPromptTextView" />

    <Button
        android:id="@+id/volunteeringButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/inter"
        android:text="Volunteering"
        android:textColor="#8F8F8F"
        android:textStyle="bold"
        android:shadowColor="#80000000"
        android:shadowDy="5"
        android:shadowRadius="7"
        app:layout_constraintEnd_toStartOf="@+id/campaignsButton"
        app:layout_constraintTop_toBottomOf="@id/joinPromptTextView" />

    <Button
        android:id="@+id/campaignsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/inter"
        android:text="Campaigns"
        android:textColor="#8F8F8F"
        android:textStyle="bold"
        android:shadowColor="#80000000"
        android:shadowDy="5"
        android:shadowRadius="7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/joinPromptTextView" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="33dp"
        app:layout_constraintStart_toEndOf="@+id/titleTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_search" />

