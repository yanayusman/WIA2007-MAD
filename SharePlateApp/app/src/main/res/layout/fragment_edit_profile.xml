<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:padding="15dp"
            android:paddingTop="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp">

                <!-- Profile Icon -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="App Logo"
                    android:src="@drawable/ic_back" />

                <!-- Toolbar Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins"
                    android:layout_marginStart="75dp"
                    android:text="Edit Profile"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

        <!-- Profile Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#28A745"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp" />

        <!-- Statistics Section -->
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="-40dp"
            android:gravity="center"
            android:background="@drawable/circle_background_profile"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/profile"
                android:scaleType="centerCrop"
                android:layout_gravity="center" />
        </LinearLayout>

        <!-- Change Picture Button -->
        <TextView
            android:id="@+id/change_picture_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change_picture"
            android:minHeight="48dp"
            android:paddingHorizontal="16dp"
            android:textColor="#000000"
            android:layout_marginStart="147dp"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="4dp" />


        <!-- Button Section -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <!-- Username -->
            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="@string/username"
                android:text="yANCHUI"
                android:backgroundTint="#CCCCCC"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Email -->
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="@string/email"
                android:text="yanchui@gmail.com"
                android:backgroundTint="#CCCCCC"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:inputType="textEmailAddress" />

            <!-- Phone Number -->
            <EditText
                android:id="@+id/phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="@string/phone_number"
                android:text="+14987889999"
                android:backgroundTint="#CCCCCC"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:inputType="phone" />

            <!-- Password -->
            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="@string/password"
                android:text="evFTbyVVCd"
                android:backgroundTint="#CCCCCC"
                android:padding="12dp"
                android:layout_marginBottom="24dp"
                android:inputType="textPassword" />

            <!-- Update Button -->
            <Button
                android:id="@+id/update_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="@string/update"
                android:backgroundTint="#000000"
                android:textColor="@android:color/white"
                android:padding="12dp" />
        </LinearLayout>

        <!-- Bottom Navigation -->
    </LinearLayout>
</ScrollView>
