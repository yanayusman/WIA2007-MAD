<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Focused state -->
    <item android:color="@color/button_green" android:state_focused="true"/>
    <!-- Error state -->
    <item android:color="@color/red" app:state_error="true"/>
    <!-- Disabled state -->
    <item android:color="@color/gray" android:state_enabled="false"/>
    <!-- Default state -->
    <item android:color="@color/button_green"/>
</selector> 