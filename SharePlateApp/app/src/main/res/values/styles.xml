<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="BottomNavigation">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomPickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/button_green</item>
        <item name="android:buttonBarButtonStyle">@style/CustomButtonStyle</item>
    </style>

    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/button_green</item>
    </style>

    <style name="DonateInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/button_green</item>
        <item name="hintTextColor">@color/button_green</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
    </style>

    <style name="DonateButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/button_green</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:padding">16dp</item>
    </style>

</resources>